<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.review.ReviewFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="150dp"
        android:text="@string/plain_jane_review_page"
        android:textAlignment="center"
        android:textStyle="bold"
        android:theme="@style/large_title_text" />

    <EditText
        android:id="@+id/ShalomEditTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textPersonName|textCapWords"
        android:hint="@string/enter_your_name" />

    <EditText
        android:id="@+id/ShalomEditTextPhone"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/enter_your_phone_number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ShalomEditTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="450dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_a_email_address"/>


    <EditText
        android:id="@+id/ShalomEditTextComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="550dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName|textAutoCorrect"
        android:hint="@string/enter_a_comment" />


</FrameLayout>