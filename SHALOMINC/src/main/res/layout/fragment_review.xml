<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lilac"
    android:gravity="center"
    tools:context=".ui.review.ReviewFragment">


    <TextView
        android:id="@+id/shalom_review_fragment_tv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"
        android:text="@string/plain_jane_review_page"
        android:textAlignment="center"
        android:textStyle="bold"
        android:theme="@style/large_title_text" />

    <EditText
        android:id="@+id/shalom_EditText_PersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="textPersonName|textCapWords"
        android:hint="@string/enter_your_name" />

    <EditText
        android:id="@+id/shalom_EditText_Phone"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/enter_your_phone_number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TEST_WILL_BE_REMOVED_AFTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="130dp"
        android:hint="Model No:"/>

    <EditText
        android:id="@+id/shalom_EditText_EmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_a_email_address"/>


    <EditText
        android:id="@+id/shalom_EditText_Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="450dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName|textAutoCorrect"
        android:hint="@string/enter_a_comment" />

    <RatingBar
        android:id="@+id/shalom_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="525dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/reset_review_form_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="90dp"
        android:text="@string/reset_btn_label" />

    <Button
        android:id="@+id/submit_review_form_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="220dp"
        android:text="@string/submit_btn_label" />




</FrameLayout>