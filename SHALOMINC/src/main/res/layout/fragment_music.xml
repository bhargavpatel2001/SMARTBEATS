<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/violet"
    tools:context=".ui.music.MusicFragment">

    <ImageView
        android:id="@+id/shalom_IV"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_music" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/shalom_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@android:color/white">
        </TextView>

        <SeekBar
            android:id="@+id/shalom_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </SeekBar>


        <TextView
            android:id="@+id/shalom_timer_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/shalom_rewind"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_fast_rewind">
        </ImageView>

        <ImageView
            android:src="@drawable/shalom_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:background="@color/violet"
            android:id="@+id/bt_play">
        </ImageView>

        <ImageView
            android:src="@drawable/shalom_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:background="@color/violet"
            android:id="@+id/bt_pause"
            android:visibility="gone">
        </ImageView>

        <ImageView
            android:src="@drawable/shalom_forward"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bt_ff">
        </ImageView>

    </LinearLayout>
</LinearLayout>
