<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lilac">


    <Button
        android:id="@+id/shalom_settings_aboutus_btn"
        android:layout_width="501dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="133dp"
        android:backgroundTint="@color/purple_200"
        android:text="About Us"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/shalom_settings_privacypolicy_btn"
        android:layout_width="504dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="81dp"
        android:backgroundTint="@color/purple_200"
        android:text="Privacy Policy"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/shalom_settings_aboutus_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="591dp"
        android:layout_marginBottom="185dp"
        android:text="About Us"
        android:textColor="@color/purple_500"
        android:theme="@style/small_title_text" />

    <TextView
        android:id="@+id/shalom_settings_general_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="602dp"
        android:layout_marginBottom="304dp"
        android:text="General"
        android:textColor="@color/purple_500"
        android:theme="@style/small_title_text" />

    <Switch
        android:id="@+id/shalom_settings_nightmode_switch"
        android:layout_width="609dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="253dp"
        android:text="Night Mode"
        android:textColor="@color/white"
        android:thumbTint="@color/grape"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/shalom_settings_portrait_switch"
        android:layout_width="609dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="210dp"
        android:textColor="@color/white"
        android:text="Portrait Mode"
        android:thumbTint="@color/grape"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shalom_settings_floating_button"
        backgroundTint="#00FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="82dp"
        android:backgroundTint="@color/purple_200"
        android:elevation="10dp"
        android:src="@drawable/email_support" />

    <TextView
        android:id="@+id/shalom_settings_Amp_tvName"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/shalom_settings_privacypolicy_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="387dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="38dp"
        android:layout_toStartOf="@+id/shalom_settings_floating_button"
        android:text="Amp Current       :"
        android:textColor="@color/purple_500"
        android:theme="@style/small_title_text"></TextView>

    <TextView
        android:id="@+id/shalom_settings_Amp_tv"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shalom_settings_privacypolicy_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="535dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="-76dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/shalom_settings_floating_button"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/shalom_settings_Temp_tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shalom_settings_privacypolicy_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="481dp"
        android:layout_marginBottom="36dp"
        android:layout_toStartOf="@+id/shalom_settings_floating_button"
        android:text="Temperature       :"
        android:textColor="@color/purple_500"
        android:theme="@style/small_title_text">
    </TextView>

    <TextView
        android:id="@+id/shalom_settings_Temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shalom_settings_privacypolicy_btn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="407dp"
        android:layout_toStartOf="@+id/shalom_settings_floating_button"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/shalom_settings_Temp_tv2"
        android:layout_width="74dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/shalom_settings_privacypolicy_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="440dp"
        android:layout_marginBottom="37dp"
        android:textStyle="bold"></TextView>


</RelativeLayout>