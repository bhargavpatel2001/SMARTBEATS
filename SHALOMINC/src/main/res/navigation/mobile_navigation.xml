<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ca.shalominc.it.smartbeats.ui.music.MusicFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_music" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="ca.shalominc.it.smartbeats.ui.lights.LightsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_lights" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="ca.shalominc.it.smartbeats.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_database"
        android:name="ca.shalominc.it.smartbeats.ui.database.DatabaseFragment"
        android:label="@string/database"
        tools:layout="@layout/fragment_database" />

</navigation>